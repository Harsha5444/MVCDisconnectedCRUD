@model MVCDisconnected.Models.Employee

<!DOCTYPE html>
<html>
<head>
    <title>Edit Employee</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    @if (TempData["updatefailed"] != null)
    {
        <script>
            alert('@TempData["updatefailed"]');
        </script>
    }
   
    <div class="container mt-4">
        <h2 class="text-center">Edit Employee</h2>

        <form method="post" action="">

            <div class="form-group">
                <label for="Ename">Eno:</label>
                <input type="text" name="Eno" readonly value="@Model.Eno" />
            </div>
            <div class="form-group">
                <label for="Ename">Name:</label>
                <input type="text" class="form-control" id="Ename" name="Ename" value="@Model.Ename" required />
            </div>

            <div class="form-group">
                <label for="Job">Job:</label>
                <input type="text" class="form-control" id="Job" name="Job" value="@Model.Job" required />
            </div>

            <div class="form-group">
                <label for="Salary">Salary:</label>
                <input type="number" class="form-control" id="Salary" name="Salary" value="@Model.Salary" required step="0.01" />
            </div>

            <div class="form-group">
                <label for="Dname">Department:</label>
                <input type="text" class="form-control" id="Dname" name="Dname" value="@Model.Dname" required />
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
            <a href="/Employee/Index" class="btn btn-secondary">Go Back</a>
        </form>
    </div>
</body>
</html>
